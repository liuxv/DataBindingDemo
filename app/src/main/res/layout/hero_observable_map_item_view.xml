<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.liuxv.databinding.utils.HeroUtils"/>
        <import type="android.text.TextUtils"/>
        <import type="android.databinding.ObservableMap"/>
        <import type="com.liuxv.databinding.config.Constants.HeroStatus"/>

        <variable
            name="hero"
            type="com.liuxv.databinding.mvc.model.HeroModel"/>
        <variable
            name="heroStatus"
            type="ObservableMap&lt;String, HeroStatus>"/>
    </data>

    <com.liuxv.databinding.mvc.view.HeroView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hero_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hero_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{hero.name}"
                android:textColor="@{HeroUtils.getHeroStatus(heroStatus[hero.name])? @color/red : @color/black}"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/hero_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="@{hero.detail}"
                android:textColor="@{HeroUtils.getHeroStatus(heroStatus[hero.name])? @color/red : @color/black}"
                android:textSize="13sp"/>

        </LinearLayout>

    </com.liuxv.databinding.mvc.view.HeroView>
</layout>
